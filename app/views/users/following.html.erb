<div class="followPage">
    <h2 class="followTtl">フォロー一覧</h2>
    <ul class="followList">
        <% @following.each do |following|  %>
            <li class="followItem">
                <% user = User.find_by(id: following.following_id)%>
                <p>
                    <%= link_to user.username, "/users/#{user.id}" %>
                </p>
            </li>
        <% end %>
    </ul>
</div>