<div class="followPage">
    <h2 class="followTtl">フォロワー一覧</h2>
    <ul class="followList">
        <% @followers.each do |follower|  %>
            <li class="followItem">
                <% user = User.find_by(id: follower.follower_id)%>
                <p>
                    <%= link_to user.username, "/users/#{user.id}" %>
                </p>
            </li>
        <% end %>
    </ul>
</div>